---
interface Props {
  title?: string;
  description?: string;
}
const { title = 'Resilient', description = '' } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title ? `${title} · Resilient` : 'Resilient'}</title>
    {description && <meta name="description" content={description} />}
    <link rel="stylesheet" href="/global.css" />
  </head>

  <body class="bg-slate-50 text-slate-900">
    <!-- Header / Nav  -->
    <header class="border-b border-slate-200 bg-white/90 backdrop-blur supports-[backdrop-filter]:bg-white/60">
      <div class="mx-auto max-w-5xl px-4 py-3 flex items-center justify-between gap-4">
        <a href="/" class="flex items-center gap-3 shrink-0">
          <img
            src="/resilient_logo_header.png"
            alt="Resilient logo"
            class="h-8 w-8 rounded-md object-contain"
            loading="eager"
          />
          <span class="font-black tracking-tight text-xl leading-none whitespace-nowrap">
            Resilient
          </span>
        </a>

        <nav class="flex items-center justify-between py-4">
  <div class="flex items-center space-x-2">
    <img src="/resilient_logo_header.png" alt="Resilient Logo" class="h-8 w-8" />
    <span class="font-bold text-lg">Resilient</span>
  </div>
  <div class="space-x-6">
    <a href="/" class="hover:underline">Home</a>
    <a href="/about" class="hover:underline">About</a>
    <a href="/services" class="hover:underline">Services</a>
    <a href="/careers" class="hover:underline">Careers</a>
    <a href="/contact" class="hover:underline">Contact</a>
    <a href="/responses" class="hover:underline">Responses</a> <!-- add this -->
  </div>
</nav>

        <!-- Mobile menu button (kept simple; no drawer JS) -->
        <a
          href="/responses"
          class="sm:hidden inline-flex items-center justify-center rounded-md border border-slate-200 px-3 py-1.5 text-sm font-medium"
          aria-label="Open tools"
          title="Tools"
        >
          Tools
        </a>
      </div>
    </header>

    <!-- Page content -->
    <main class="mx-auto max-w-5xl px-4 py-10">
      <slot />
    </main>

    <footer class="border-t border-slate-200 bg-white/70">
      <div class="mx-auto max-w-5xl px-4 py-6 text-sm text-slate-500">
        © {new Date().getFullYear()} Resilient Commercial Solutions LLC
      </div>
    </footer>
  </body>
</html>
