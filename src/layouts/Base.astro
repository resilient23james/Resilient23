---
const { title = "Resilient Commercial Solutions LLC" } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <link rel="icon" type="image/png" href="/resilient_logo_header.png" />
    <link rel="stylesheet" href="/global.css" />
  </head>
  <body class="bg-slate-50 text-slate-800">
    <header class="border-b border-slate-200 bg-white/70 backdrop-blur supports-[backdrop-filter]:bg-white/50">
      <nav class="mx-auto flex max-w-6xl items-center justify-between gap-4 px-4 py-4">
        <a href="/" class="flex items-center gap-3">
          <img src="/resilient_logo_header.png" alt="Resilient logo" class="h-8 w-8 rounded-sm object-contain" />
          <span class="text-xl font-extrabold tracking-tight">Resilient Commercial Solutions LLC</span>
        </a>
        <ul class="flex items-center gap-6 text-sm font-medium">
          <li><a class="hover:text-sky-700" href="/about">About</a></li>
          <li><a class="hover:text-sky-700" href="/services">Services</a></li>
          <li><a class="hover:text-sky-700" href="/careers">Careers</a></li>
          <li><a class="hover:text-sky-700" href="/contact">Contact</a></li>
          <li><a class="hover:text-sky-700" href="/responses">Responses</a></li>
        </ul>
      </nav>
    </header>

    <main class="mx-auto max-w-6xl px-4 py-10">
      <slot />
    </main>

    <footer class="mt-20 border-t border-slate-200 bg-white/60">
      <div class="mx-auto max-w-6xl px-4 py-8 text-sm text-slate-500">
        Â© {new Date().getFullYear()} Resilient Commercial Solutions LLC. All rights reserved.
      </div>
    </footer>
  </body>
</html>
