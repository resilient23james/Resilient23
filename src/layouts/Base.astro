---
const { title = "Resilient" } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
  </head>
  <body class="bg-slate-50 text-slate-800">
    <!-- Header -->
    <header class="sticky top-0 z-50 border-b border-slate-200 bg-white/90 backdrop-blur">
      <div class="mx-auto max-w-6xl px-4">
        <div class="flex h-16 items-center justify-between">
          <!-- Brand (one logo only) -->
          <a href="/" class="flex items-center gap-3">
            <img src="/resilient_logo_header.png" alt="Resilient logo" class="h-8 w-8" />
            <span class="font-extrabold tracking-tight text-xl">Resilient</span>
          </a>

          <!-- Desktop Nav -->
          <nav class="hidden md:flex items-center gap-6">
  <a href="/" class="hover:underline">Home</a>
  <a href="/about" class="hover:underline">About</a>
  <a href="/services" class="hover:underline">Services</a>
  <a href="/careers" class="hover:underline">Careers</a>
  <a href="/contact" class="hover:underline">Contact</a>
  <a href="/subcontractors" class="hover:underline">Subcontractors</a>
</nav>

<!-- mobile drawer list should also use /subcontractors -->
<ul class="flex flex-col gap-2 pt-2 md:hidden">
  <li><a href="/" class="block rounded px-2 py-2 hover:bg-slate-100">Home</a></li>
  <li><a href="/about" class="block rounded px-2 py-2 hover:bg-slate-100">About</a></li>
  <li><a href="/services" class="block rounded px-2 py-2 hover:bg-slate-100">Services</a></li>
  <li><a href="/careers" class="block rounded px-2 py-2 hover:bg-slate-100">Careers</a></li>
  <li><a href="/contact" class="block rounded px-2 py-2 hover:bg-slate-100">Contact</a></li>
  <li><a href="/subcontractors" class="block rounded px-2 py-2 hover:bg-slate-100">Subcontractors</a></li>
</ul>

          <!-- Mobile menu button -->
          <button
            id="menuBtn"
            class="md:hidden inline-flex items-center justify-center rounded-md border border-slate-300 px-3 py-2 text-sm"
            aria-expanded="false"
            aria-controls="mobileNav"
          >
            Menu
          </button>
        </div>

        <!-- Mobile Nav (hidden by default) -->
        <nav
          id="mobileNav"
          class="md:hidden hidden pb-3 animate-[fadeIn_.15s_ease-out]"
        >
          <ul class="flex flex-col gap-2 pt-2">
            <li><a href="/" class="block rounded px-2 py-2 hover:bg-slate-100">Home</a></li>
            <li><a href="/about" class="block rounded px-2 py-2 hover:bg-slate-100">About</a></li>
            <li><a href="/services" class="block rounded px-2 py-2 hover:bg-slate-100">Services</a></li>
            <li><a href="/careers" class="block rounded px-2 py-2 hover:bg-slate-100">Careers</a></li>
            <li><a href="/contact" class="block rounded px-2 py-2 hover:bg-slate-100">Contact</a></li>
            <li><a href="/responses" class="block rounded px-2 py-2 hover:bg-slate-100">Responses</a></li>
          </ul>
        </nav>
      </div>
    </header>

    <!-- Page content -->
    <main class="mx-auto max-w-6xl px-4 py-10">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="border-t border-slate-200 py-10">
      <div class="mx-auto max-w-6xl px-4 text-sm text-slate-500">
        Â© 2025 Resilient Commercial Solutions LLC
      </div>
    </footer>

    <!-- Tiny script to toggle the mobile drawer -->
    <script>
      const btn = document.getElementById('menuBtn');
      const nav = document.getElementById('mobileNav');
      if (btn && nav) {
        btn.addEventListener('click', () => {
          const open = nav.classList.toggle('hidden') === false;
          btn.setAttribute('aria-expanded', String(open));
        });
      }
    </script>
  </body>
</html>
