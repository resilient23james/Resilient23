---
const nav = [
  { href: "/", label: "Home" },
  { href: "/services/", label: "Services" },
  { href: "/careers/", label: "Careers" },
  { href: "/subcontractors/", label: "Subcontractors" },
  { href: "/contact/", label: "Contact" },
];

const cta = { href: "/contact/#quote", label: "Get a Quote" };
---

<header class="sticky top-0 z-50 bg-white/90 backdrop-blur border-b border-slate-200">
  <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8 h-16 flex items-center justify-between">
    <!-- Logo / Brand -->
    <a href="/" class="flex items-center gap-3">
      <img src="/logo.png" alt="Resilient logo" class="h-8 w-8 rounded" loading="eager" />
      <span class="text-xl font-semibold tracking-tight text-slate-900">Resilient</span>
    </a>

    <!-- Desktop nav -->
    <nav class="hidden md:flex items-center gap-6">
      {nav.map((item) => (
        <a href={item.href} class="text-slate-700 hover:text-slate-900 font-medium">
          {item.label}
        </a>
      ))}
      <a
        href={cta.href}
        class="inline-flex items-center rounded-md bg-blue-600 px-4 py-2 text-white font-semibold hover:bg-blue-700"
      >
        {cta.label}
      </a>
    </nav>

    <!-- Mobile menu button -->
    <button
      class="md:hidden inline-flex items-center rounded-md border border-slate-300 px-3 py-2 text-slate-800"
      aria-controls="mobile-menu"
      aria-expanded="false"
      id="menu-btn"
    >
      Menu
    </button>
  </div>

  <!-- Mobile dropdown -->
  <div id="mobile-menu" class="md:hidden hidden border-t border-slate-200 bg-white">
    <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8 py-3 grid gap-2">
      {nav.map((item) => (
        <a href={item.href} class="block py-2 text-slate-800 font-medium">
          {item.label}
        </a>
      ))}
      <a
        href={cta.href}
        class="mt-2 inline-flex w-full items-center justify-center rounded-md bg-blue-600 px-4 py-2 text-white font-semibold hover:bg-blue-700"
      >
        {cta.label}
      </a>
    </div>
  </div>

  <script>
    const btn = document.getElementById("menu-btn");
    const panel = document.getElementById("mobile-menu");
    btn?.addEventListener("click", () => {
      panel?.classList.toggle("hidden");
      const expanded = btn.getAttribute("aria-expanded") === "true";
      btn.setAttribute("aria-expanded", (!expanded).toString());
    });
  </script>
</header>
