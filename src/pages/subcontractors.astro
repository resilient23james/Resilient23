---
import Base from "../layouts/Base.astro";
import { subcontractors } from "../data/subcontractors";
---

<Base title="Subcontractors">
  <h1 class="text-3xl font-bold mb-6">Subcontractor Network</h1>
  <p class="mb-8 text-lg">
    Resilient Commercial Solutions LLC partners with a reliable network of subcontractors across NC and FL.
    Our crews are vetted, insured, and trained for consistent quality.
  </p>

  <div class="grid gap-6 md:grid-cols-2">
    {subcontractors.map((item) => (
      <div class="border rounded-lg p-6 shadow-sm bg-white">
        <h2 class="text-xl font-semibold mb-2">{item.title}</h2>
        <p class="text-gray-700">{item.description}</p>
      </div>
    ))}
  </div>
</Base>
