---
import BaseLayout from "../layouts/BaseLayout.astro";
import TrustStrip from "../components/TrustStrip.astro"; // optional (if you added it)
---

<BaseLayout
  title="Facility Services You Can Trust | Resilient Commercial Solutions LLC"
  description="Dependable, compliant, high-quality facility services. Florida LLC Â· Hiscox CGL $2M/$2M. Project-based and recurring programs."
>
  <!-- HERO -->
  <section class="bg-slate-900 text-white py-20 text-center">
    <div class="max-w-4xl mx-auto px-6">
      <h1 class="text-5xl font-extrabold mb-4">Facility Services You Can Trust</h1>
      <p class="text-lg opacity-90">
        Resilient Commercial Solutions LLC delivers dependable, compliant, high-quality cleaning and facility care.
      </p>
      <div class="mt-8 flex justify-center gap-4">
        <a href="/contact/#quote" class="rounded-md bg-blue-600 px-5 py-3 font-semibold text-white hover:bg-blue-700">Get a Quote</a>
        <a href="/services/" class="rounded-md bg-white/10 px-5 py-3 font-semibold text-white ring-1 ring-white/30 hover:bg-white/20">View Services</a>
      </div>
    </div>
  </section>

  <!-- TRUST STRIP (optional) -->
  {typeof TrustStrip !== "undefined" && <TrustStrip />}

  <!-- INTRO -->
  <section class="max-w-6xl mx-auto px-6 py-12 grid md:grid-cols-2 gap-10">
    <div>
      <h2 class="text-2xl font-bold mb-3">Why Resilient</h2>
      <p class="text-slate-700">
        Government-ready SOPs, insurance in place, and a trained team. We support daily upkeep, deep cleans,
        and post-construction turnovers across NC & FL.
      </p>
    </div>
    <div class="grid grid-cols-2 gap-4">
      <div class="rounded-lg border p-4">
        <div class="text-sm font-semibold">Green Products</div>
        <p class="text-sm text-slate-600 mt-2">Available on request to meet sustainability goals.</p>
      </div>
      <div class="rounded-lg border p-4">
        <div class="text-sm font-semibold">Photo Standards</div>
        <p class="text-sm text-slate-600 mt-2">Before/after verification for periodic work.</p>
      </div>
      <div class="rounded-lg border p-4">
        <div class="text-sm font-semibold">QA Inspections</div>
        <p class="text-sm text-slate-600 mt-2">Scorecards and corrective follow-ups.</p>
      </div>
      <div class="rounded-lg border p-4">
        <div class="text-sm font-semibold">IVR Check-In</div>
        <p class="text-sm text-slate-600 mt-2">Optional geo/time verification.</p>
      </div>
    </div>
  </section>
</BaseLayout>
