---
import BaseLayout from "../layouts/BaseLayout.astro";
import Testimonials from "../components/Testimonials.astro";
import PortfolioGrid from "../components/PortfolioGrid.astro";
---

<BaseLayout
  title="Facility Services You Can Trust | Resilient Commercial Solutions"
  description="Dependable, compliant, high-quality facility care across NC & FL. Daily upkeep, deep cleans, and post-construction turnovers with photo verification and QA."
>
  <!-- Hero -->
  <section class="bg-slate-900 text-white">
    <div class="max-w-6xl mx-auto px-6 py-20">
      <h1 class="text-4xl md:text-6xl font-extrabold tracking-tight mb-6">
        Facility Services You<br class="hidden md:block" /> Can Trust
      </h1>
      <p class="text-lg md:text-xl text-slate-200 max-w-3xl">
        Resilient Commercial Solutions LLC delivers dependable, compliant,
        high-quality cleaning and facility care.
      </p>

      <div class="mt-8 flex flex-col sm:flex-row gap-4">
        <a href="/contact" class="inline-flex items-center justify-center rounded-lg px-6 py-3 font-semibold bg-blue-600 hover:bg-blue-500">
          Get a Quote
        </a>
        <a href="/services" class="inline-flex items-center justify-center rounded-lg px-6 py-3 font-semibold bg-white/10 hover:bg-white/20 ring-1 ring-white/20">
          View Services
        </a>
      </div>
    </div>
  </section>

  <!-- Trust strip -->
  <section class="bg-white">
    <div class="max-w-6xl mx-auto px-6 py-8 grid md:grid-cols-2 lg:grid-cols-4 gap-6 text-slate-800">
      <div class="flex items-start gap-3">
        <span class="mt-1 inline-block h-2 w-2 rounded-full bg-slate-900"></span>
        <div>
          <div class="font-semibold">Florida LLC</div>
          <div class="text-sm text-slate-600">Doc #L23000503930</div>
        </div>
      </div>
      <div class="flex items-start gap-3">
        <span class="mt-1 inline-block h-2 w-2 rounded-full bg-slate-900"></span>
        <div>
          <div class="font-semibold">Hiscox CGL $2M / $2M</div>
          <div class="text-sm text-slate-600">Insurance in place</div>
        </div>
      </div>
      <div class="flex items-start gap-3">
        <span class="mt-1 inline-block h-2 w-2 rounded-full bg-slate-900"></span>
        <div>
          <div class="font-semibold">Government-ready SOPs</div>
          <div class="text-sm text-slate-600">Documented procedures</div>
        </div>
      </div>
      <div class="flex items-start gap-3">
        <span class="mt-1 inline-block h-2 w-2 rounded-full bg-slate-900"></span>
        <div>
          <div class="font-semibold">Green products</div>
          <div class="text-sm text-slate-600">Available on request</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Why Resilient -->
  <section class="bg-white">
    <div class="max-w-6xl mx-auto px-6 py-14">
      <h2 class="text-3xl md:text-4xl font-extrabold tracking-tight mb-4">Why Resilient</h2>
      <p class="text-slate-600 max-w-3xl">
        Government-ready SOPs, insurance in place, and a trained team. We support
        daily upkeep, deep cleans, and post-construction turnovers across NC &amp; FL.
      </p>

      <div class="mt-8 grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
        <div class="rounded-xl border border-slate-200 p-5 bg-white">
          <h3 class="font-semibold mb-1">Green Products</h3>
          <p class="text-sm text-slate-600">Available on request to meet sustainability goals.</p>
        </div>
        <div class="rounded-xl border border-slate-200 p-5 bg-white">
          <h3 class="font-semibold mb-1">Photo Standards</h3>
          <p class="text-sm text-slate-600">Before/after verification for periodic work.</p>
        </div>
        <div class="rounded-xl border border-slate-200 p-5 bg-white">
          <h3 class="font-semibold mb-1">QA Inspections</h3>
          <p class="text-sm text-slate-600">Scorecards and corrective follow-ups.</p>
        </div>
        <div class="rounded-xl border border-slate-200 p-5 bg-white">
          <h3 class="font-semibold mb-1">IVR Check-In</h3>
          <p class="text-sm text-slate-600">Optional geo/time verification.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials -->
  <Testimonials />

  <!-- Portfolio teaser -->
  <PortfolioGrid />
</BaseLayout>
