---
import Base from "../layouts/Base.astro";
---

<Base title="Contact — Resilient Commercial Solutions LLC">
  <h1 class="mb-6 text-3xl font-extrabold tracking-tight">Contact Us</h1>
  <p class="mb-8 max-w-2xl text-slate-700">
    Fill out the form below and someone from <strong>Resilient Commercial Solutions LLC</strong> will follow up with you.
  </p>

  <form
    name="contact"
    method="POST"
    data-netlify="true"
    netlify-honeypot="bot-field"
    action="/thanks"
    class="max-w-xl space-y-4 rounded-lg border border-slate-200 bg-white p-6"
  >
    <input type="hidden" name="form-name" value="contact" />
    <p class="hidden">
      <label>Don’t fill this out: <input name="bot-field" /></label>
    </p>

    <div>
      <label class="mb-1 block text-sm font-medium">Name</label>
      <input
        class="w-full rounded-md border border-slate-300 px-3 py-2 outline-none focus:border-sky-500"
        type="text" name="name" required
      />
    </div>

    <div>
      <label class="mb-1 block text-sm font-medium">Email</label>
      <input
        class="w-full rounded-md border border-slate-300 px-3 py-2 outline-none focus:border-sky-500"
        type="email" name="email" required
      />
    </div>

    <div>
      <label class="mb-1 block text-sm font-medium">Message</label>
      <textarea
        class="h-40 w-full rounded-md border border-slate-300 px-3 py-2 outline-none focus:border-sky-500"
        name="message" required
      ></textarea>
    </div>

    <button
      type="submit"
      class="rounded-md bg-sky-600 px-5 py-3 font-semibold text-white hover:bg-sky-700"
    >
      Send
    </button>
  </form>
</Base>
