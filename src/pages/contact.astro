---
import Base from "../layouts/Base.astro";
---

<Base title="Contact — Resilient Careers">
  <section class="mx-auto max-w-3xl px-4 py-10">
    <h1 class="text-4xl font-bold mb-6">Contact Us</h1>
    <p class="mb-8 text-slate-700">
      Fill out the form below and someone from Resilient Commercial Solutions LLC will follow up with you.
    </p>

    <!-- Netlify-enabled form -->
    <form
      name="contact"
      method="POST"
      data-netlify="true"
      netlify-honeypot="bot-field"
      action="/thanks"
      class="space-y-4"
    >
      <!-- Hidden fields required by Netlify -->
      <input type="hidden" name="form-name" value="contact" />
      <p class="hidden">
        <label>Don’t fill this out: <input name="bot-field" /></label>
      </p>

      <!-- Name -->
      <input
        class="w-full border rounded p-3"
        type="text"
        name="name"
        placeholder="Name"
        required
      />

      <!-- Email -->
      <input
        class="w-full border rounded p-3"
        type="email"
        name="email"
        placeholder="Email"
        required
      />

      <!-- Message -->
      <textarea
        class="w-full border rounded p-3 h-40"
        name="message"
        placeholder="Message"
        required
      ></textarea>

      <!-- Submit -->
      <button
        class="px-5 py-3 rounded font-semibold text-white bg-blue-600 hover:bg-blue-700"
        type="submit"
      >
        Send Message
      </button>
    </form>
  </section>
</Base>
