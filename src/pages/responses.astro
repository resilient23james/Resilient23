---
import Base from "../layouts/Base.astro";
import { responses } from "../data/responses";
---

<Base title="Response Library">
  <h1 class="text-3xl font-bold mb-6">Response Library</h1>
  <div class="space-y-6">
    {responses.map((r) => (
      <div class="p-4 bg-white rounded shadow">
        <h2 class="text-xl font-semibold mb-2">{r.title}</h2>
        <pre class="whitespace-pre-wrap text-gray-700 mb-2">{r.text}</pre>
        <button
          class="px-4 py-2 bg-blue-600 text-white rounded"
          onClick={() => navigator.clipboard.writeText(r.text)}
        >
          Copy
        </button>
      </div>
    ))}
  </div>
</Base>
