---
import Base from "../layouts/Base.astro";
import { responses } from "../data/responses";
---

<Base title="Response Library">
  <h1 class="text-3xl font-bold mb-6">Response Library</h1>

  <div class="grid gap-6">
    {responses.map((resp) => (
      <div class="border rounded-lg p-4 shadow-sm bg-white">
        <h2 class="text-xl font-semibold mb-2">{resp.title}</h2>
        <pre class="whitespace-pre-wrap text-sm mb-4">{resp.body}</pre>
        <button 
          class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700"
          onClick={() => navigator.clipboard.writeText(resp.body)}
        >
          Copy
        </button>
      </div>
    ))}
  </div>
</Base>
