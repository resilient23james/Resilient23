---
import Base from '../layouts/Base.astro';
import { responseBlocks } from '../data/responses';

const pageTitle = 'Response Library';
---

<Base title={pageTitle} description="Internal library of ready-to-send responses.">
  <h1 class="text-4xl font-black tracking-tight mb-8">{pageTitle}</h1>

  <div class="space-y-10">
    {responseBlocks.map((b) => (
      <section class="rounded-xl border border-slate-200 bg-white shadow-sm">
        <div class="p-5 sm:p-6">
          <h2 class="text-2xl font-extrabold mb-4">{b.title}</h2>

          <div class="mb-4">
            <textarea
              readonly
              rows="7"
              class="w-full resize-y rounded-lg border border-slate-300 bg-slate-50 p-4 font-mono text-[0.95rem] leading-6"
            >{b.text}</textarea>
          </div>

          <button
            type="button"
            class="inline-flex items-center justify-center rounded-md bg-sky-600 px-5 py-2.5 text-white font-semibold hover:bg-sky-700 active:bg-sky-800"
            onClick={`navigator.clipboard.writeText(${JSON.stringify(b.text)})`}
          >
            Copy
          </button>
        </div>
      </section>
    ))}
  </div>
</Base>
